<div class="container p-0 mb-4 border-bottom border-secondary">
  <h1>Tasks</h1>
</div>

<% @tasks.each do |task| %>
  <div class="mt-2 mt-6 d-flex justify-content-between">
    <div class="p-0 m-0 col-7">
      <p><%= link_to task.title, task_path(task) %></p>
    </div>
    <div class="col-2">
      <input type="checkbox" name="checkbox" <%= task.completed ? "checked" : "" %> />
    </div>
    <div class="text-right col-3">
      <%= link_to "<i class='fa-regular fa-trash-can'></i>".html_safe,
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  </div>

<% end %>
<div class="border-top border-secondary mt-4">
  <%= link_to "Create a new task", task_new_path  %>
</div>
